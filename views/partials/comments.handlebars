<div class="comments">
    {{!-- In Handlebars.js, we can use the trusty keyword this to refer to the parent object or array that's available in the context of the partial.  Because arrays don't have named properties like objects do, we're forced to access the array as this.--}}
  {{#each this as |comment|}} 
  {{!-- {{#each post.comments --}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>